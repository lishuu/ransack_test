<%= form_for(@product, remote: true, :html=>{:role=>"form"}) do |f| %>

    <div id="error_explanation" class="bg-danger text-danger">
    </div>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.number_field :price %>
  </div>
  <div class="field">
    <%= f.label :discontined %><br>
    <%= f.check_box :discontined %>
  </div>
  <div class="field">
    <%= f.label :carrier_id %><br>
    <%= f.number_field :carrier_id %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
