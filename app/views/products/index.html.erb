<p id="notice"><%= notice %></p>

<h1>产品列表</h1>

<%= search_form_for @q do |f| %>

  <%= f.label :name_start, "产品名称" %>
  <%= f.search_field :name_start %>
  <br />

  <%= f.label :description_cont, "产品说明" %>
  <%= f.search_field :description_cont %>
  <br />

  <%= f.label :carrier_name_cont, "运营商" %>
  <%= f.search_field :carrier_name_cont %>
  <br />

  <%= f.label :price_lt, "金额（以下）" %>
  <%= f.search_field :price_lt %>
  <br />

  <%= f.label :name_or_description_cont, "说明" %>
  <%= f.search_field :name_or_description_cont %>
  <br />  

  <%= f.submit %>


<% end %>


<div class="well">
  <%= link_to "新建产品", new_product_path, remote: true, class: "btn btn-primary" %>
</div>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th class="col-sm-2">产品名称</th>
      <th class="col-sm-5">产品描述</th>
      <th class="col-sm-1">价格</th>
      <th class="col-sm-1">折扣</th>
      <th class="col-sm-1">运营商</th>
      <th class="col-sm-2" colspan="3"></th>
    </tr>
  </thead>

  <tbody id="products">
    <%= render @products %>
  </tbody>
</table>

<%= render 'dialog' %>
